      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="LudoServer">
      <HintPath>..\..\..\LudoServer\bin\Debug\net8.0\LudoServer.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
