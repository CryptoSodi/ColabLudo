<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LudoClient.ControlView.SettingsSwitch"
             xmlns:local="clr-namespace:LudoClient.ControlView">
    <Grid>
        <Image x:Name="bgImage" Source="line_bg.png" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label x:Name="SettingTextView" Margin="10,0,0,0" TextColor="Black" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
        <local:ImageSwitch x:Name="ImageSwitchControl" SwitchOn="switch_btn_on.png" SwitchOff="switch_btn_off.png" Margin="0,8,5,8"  VerticalOptions="Center" HorizontalOptions="End" />
    </Grid>
</ContentView>