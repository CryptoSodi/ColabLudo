<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LudoClient.ControlView.PlayerSeat"
             xmlns:local="clr-namespace:LudoClient.ControlView">

    <local:Capsule x:Name="playerBG">
        <Grid RowDefinitions=".14*,1*,.3*" ColumnDefinitions=".13*,1*,.06*,0.96*,.01*">
            <Image Grid.Column="1" Grid.Row="1" Source="player.png" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Start"/>
            <ImageButton Clicked="Dice_Clicked" Grid.Column="3" Grid.Row="1" Source="dice.png" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Start"/>
        </Grid>
    </local:Capsule>
</ContentView>