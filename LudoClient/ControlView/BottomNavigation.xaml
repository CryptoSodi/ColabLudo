<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:LudoClient.ControlView"
             x:Class="LudoClient.ControlView.BottomNavigation">
    <Grid BackgroundColor="#33344F33" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <local:Capsule ImageSource="footer.png" VerticalOptions="End" HorizontalOptions="FillAndExpand">
            <Grid VerticalOptions="End" HorizontalOptions="FillAndExpand" ColumnDefinitions=".3*,1.2*,.6*">
                <Grid>
                    <ImageButton Source="btn_back.png" Clicked="OnBackButtonClicked" Margin="0,0,0,0" HorizontalOptions="Start" VerticalOptions="Center"/>
                </Grid>
                <StackLayout Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" ColumnDefinitions="1*,1*">
                        
                        <local:ImageSwitch x:Name="MusicSwitch" SwitchOn="btn_music.png" SwitchOff="btn_music_off.png" Grid.Column="0"/>
                        <local:ImageSwitch x:Name="SoundSwitch" SwitchOn="btn_sound.png" SwitchOff="btn_sound_off.png" Grid.Column="1"/>
                    </Grid>
                </StackLayout>
            </Grid>
        </local:Capsule>
    </Grid>
</ContentView>