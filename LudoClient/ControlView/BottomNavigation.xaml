<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:LudoClient.ControlView"
             x:Class="LudoClient.ControlView.BottomNavigation">
    <Grid  BackgroundColor="#33344F33" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <local:Capsule ImageSource="footer.png" VerticalOptions="End" HorizontalOptions="StartAndExpand">
            <Grid VerticalOptions="End" HorizontalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>
                <ImageButton Source="btn_back.png" Clicked="OnBackButtonClicked" Margin="5,0,0,0" Aspect="AspectFit" HorizontalOptions="Start" VerticalOptions="CenterAndExpand"/>
                <StackLayout Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <local:ImageSwitch x:Name="MusicSwitch" SwitchOn="btn_music.png" SwitchOff="btn_music_off.png" Grid.Column="0"/>
                        <local:ImageSwitch x:Name="SoundSwitch" SwitchOn="btn_sound.png" SwitchOff="btn_sound_off.png" Grid.Column="1"/>
                    </Grid>
                </StackLayout>
            </Grid>
        </local:Capsule>
    </Grid>
</ContentView>