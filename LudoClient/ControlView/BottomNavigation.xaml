<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:LudoClient.ControlView"
             x:Class="LudoClient.ControlView.BottomNavigation">
    <Grid BackgroundColor="#33344F33" HorizontalOptions="Fill" VerticalOptions="Fill">
        <local:Capsule ImageSource="footer.png" VerticalOptions="End" HorizontalOptions="Fill">
            <Grid VerticalOptions="End" HorizontalOptions="Fill" ColumnDefinitions=".3*,1.2*,.6*">
                <Grid>
                    <Image Source="btn_back.png" HorizontalOptions="Start" VerticalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBackButtonClicked" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Grid>
        </local:Capsule>
    </Grid>
</ContentView>