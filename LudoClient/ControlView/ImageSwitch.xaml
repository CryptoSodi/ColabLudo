<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LudoClient.ControlView.ImageSwitch"
             xmlns:local="clr-namespace:LudoClient.ControlView">
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <local:Capsule x:Name="SwitchImage" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid>
                <Label x:Name="DisplayText" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,5,0,0"/>
                <ImageButton BackgroundColor="Transparent" Clicked="SwitchImage_Clicked" HorizontalOptions="Fill" VerticalOptions="End"/>
            </Grid>
        </local:Capsule>
    </Grid>
</ContentView>