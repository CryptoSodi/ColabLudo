<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LudoClient.ControlView"
             x:Class="LudoClient.ControlView.PlayerBox">
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions=".8*,.3*">
        <Grid>
            <local:Player Grid.Column="1" x:Name="PlayerImageItem" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>
        <Grid Grid.Row="1">
            <BoxView CornerRadius="6" BackgroundColor="#91111111" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <Label x:Name="PlayerNameText"/>
        </Grid>
    </Grid>
</ContentView>