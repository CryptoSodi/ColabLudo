<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LudoClient.ControlView.PlayerBox">
    
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height=".8*" />
            <RowDefinition Height=".22*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="PlayerImageItem" Margin="0,2,0,2" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Image Source="profile_user.png" Margin="0,2,0,2" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center"/>
        <BoxView Grid.Row="1" CornerRadius="5" BackgroundColor="DarkBlue" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
        <Label x:Name="PlayerNameText" Grid.Row="1"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HorizontalOptions="FillAndExpand"/>
    </Grid>
</ContentView>
