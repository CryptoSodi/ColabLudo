<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LudoClient.BottomCV">
    <Grid BackgroundColor="#33344F33" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Image x:Name="BottomImage" Source="hdrbgsharedassets.png" VerticalOptions="End" HorizontalOptions="StartAndExpand"/>
        <Grid VerticalOptions="End" HorizontalOptions="FillAndExpand" HeightRequest="{Binding Source={x:Reference BottomImage}, Path=Height}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Image Source="ic_home.png" Grid.Column="0"/>
            <Image Source="ic_friends.png" Grid.Column="1"/>
            <Image Source="ic_ranking.png" Grid.Column="2"/>
            <Image Source="ic_wallet.png" Grid.Column="3"/>
        </Grid>
    </Grid>
</ContentView>
