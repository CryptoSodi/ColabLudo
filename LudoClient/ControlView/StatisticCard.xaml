             x:Class="LudoClient.ControlView.StatisticCard">
    <Grid>
        <Image Source="played_bg.png"/>
        <Grid RowDefinitions="1.4*,2*">
            <Label x:Name="TitleBarText" TextColor="Black" FontSize="9" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
