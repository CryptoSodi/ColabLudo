<?xml version="1.0" encoding="utf-8" ?>
<popup:BasePopup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:local="clr-namespace:LudoClient.ControlView"
           xmlns:popup="clr-namespace:LudoClient.Popups"
           x:Class="LudoClient.Popups.AddCash"
           ImageSource="popup_bg.png">
    <popup:BasePopup.PopupContent>
        <Grid RowSpacing="20" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" RowDefinitions=".5*,8*,.5*" ColumnDefinitions=".4*,8*,.4*">
            <local:TitleBar Grid.Row="1" Grid.Column="1" Title="ADD CASH" Margin="20,-58,20,0" HorizontalOptions="FillAndExpand" VerticalOptions="Start"/>
            <StackLayout Spacing="10" Grid.Row="1" Grid.Column="1" Margin="10,0,10,-28" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <local:Capsule ImageSource="bg_disable_field.png" Margin="0,5,0,0" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                    <Grid Margin="0,5,8,8.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Text="TOTAL BALANCE AVAILABLE" FontSize="12" Margin="10,0,0,0" TextColor="Black" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" VerticalOptions="CenterAndExpand"/>
                        <Grid Grid.Column="1">
                            <Frame BackgroundColor="#60000000" CornerRadius="4" Padding="30,-5,30,-5">
                                <Label Text="187" FontSize="12" Margin="0,0,0,0" TextColor="Black" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
                            </Frame>
                        </Grid>
                    </Grid>
                </local:Capsule>
                <Grid Margin="2,0,2,10" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                    <BoxView CornerRadius="10,10,0,0" BackgroundColor="#2C40AA" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    <StackLayout Spacing="10" Margin="2,15,2,20" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <local:EditField Title="ADD CASH" Margin="10,0,10,0" HorizontalOptions="FillAndExpand" VerticalOptions="Start"/>
                        <local:Capsule ImageSource="after_add_cash_bg.png" Margin="-2,0,-2,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Label Text="AFTER ADD CASH" Margin="5,0,0,0"  FontSize="9" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                        </local:Capsule>
                        <StackLayout Orientation="Horizontal" Grid.Row="2" Margin="20,0,20,0" Spacing="15" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <local:Capsule ImageSource="btn_orange.png" HorizontalOptions="FillAndExpand">
                                <Label Text="100" FontSize="9" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                            </local:Capsule>
                            <local:Capsule ImageSource="btn_blue.png" HorizontalOptions="FillAndExpand">
                                <Label Text="500" FontSize="9" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                            </local:Capsule>
                            <local:Capsule ImageSource="btn_pink.png" HorizontalOptions="FillAndExpand">
                                <Label Text="1000" FontSize="9" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                            </local:Capsule>
                        </StackLayout>
                        <Image Grid.Row="3" Margin="0,10,0,-5" Source="btn_green.png" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="30"/>
                    </StackLayout>
                </Grid>
                <Grid Margin="2,-20,2,10" ColumnSpacing="15" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="1*,1*">
                    <BoxView Grid.ColumnSpan="2" CornerRadius="0,0,10,10" BackgroundColor="#24348A" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    <Grid Margin="0,15,0,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        <BoxView Margin="10,0,0,0" CornerRadius="5" BackgroundColor="#3F55C4" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                        <Grid Margin="10,0,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" RowDefinitions="1*,1*">
                            <Image Source="ic_coupon.png" Margin="10,10,10,5" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Grid.Row="1" Text="COUPNS" FontSize="12" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1" Margin="0,15,0,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        <BoxView Margin="0,0,10,0" CornerRadius="5" BackgroundColor="#3F55C4" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                        <Grid Margin="0,0,10,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="1*,1*" >
                            <Image Source="ic_redeem.png" Margin="10,10,10,5" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Grid.Row="1" Text="REDEEM COUPNS" FontSize="12" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                        </Grid>
                    </Grid>
                </Grid>
            </StackLayout>
        </Grid>
    </popup:BasePopup.PopupContent>
</popup:BasePopup>