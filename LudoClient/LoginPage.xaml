<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LudoClient.ControlView"
             mc:Ignorable="d"
             x:Class="LudoClient.LoginPage"
             BackgroundImageSource="background.png">
    <!-- StackLayout for the content -->
    <StackLayout VerticalOptions="CenterAndExpand" Spacing="15">
        <!-- Your content here -->
        <Image Source="alogo2.png" HeightRequest="155"/>

        <local:EditField x:Name="NumberField" Title="Number" Margin="15,0,15,5" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
        <local:EditField x:Name="OtpField"    Title="OTP" Margin="15,0,15,5" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
        

        <ImageButton x:Name="BtnLoginSingup" Clicked="LoginSingup_Clicked" Source="abtnlogin.png" Padding="0,10,0,0"/>

        <local:Capsule x:Name="GoogleLoginPanel" ImageSource="google_login.png" Padding="90,0,90,20" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand">
            <ImageButton Clicked="GooleSignup_Clicked" />
        </local:Capsule>

        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Version 1.0"/>

    </StackLayout>
</ContentPage>